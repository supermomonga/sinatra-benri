source 'https://rubygems.org'
ruby '2.0.0'

# Framework
gem 'sinatra'
gem 'tilt', '~> 1.4.1'

# Markup
gem 'slim'

# Assets
group :assets do
  gem 'sprockets'
  gem 'sass'
  gem 'coffee-script'
end

# Database
gem 'data_mapper'
gem 'dm-sqlite-adapter', group: :development
gem 'dm-postgres-adapter', group: :production

# Server
gem 'unicorn'
gem 'foreman', group: :development

# Debug
gem 'pry'

